<Window x:Class="Mail.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mail"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <TextBlock DockPanel.Dock="Top" FontSize="38 " Text="{Binding InfoText}" />
            <Button DockPanel.Dock="Bottom" FontSize="25" Height="50" Content="Start AutoUpdater" Click="Button_Click" />
        </DockPanel>
    </Grid>
</Window>
